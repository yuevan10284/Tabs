{
    "expo": {
        "name": "Plant-Tracker",
        "slug": "Plant-Tracker",
        "version": "1.0.0",
        "platforms": ["ios", "android", "web"],
        "ios": {
            "infoPlist": {
                "NSCameraUsageDescription": "We need access to your camera to scan QR codes for plant details."
            },
            "bundleIdentifier": "com.anonymous.Tabs"
        },
        "android": {
            "package": "com.anonymous.Tabs"
        },
        "plugins": [
            [
                "react-native-vision-camera",
                {
                    "cameraPermissionText": "$(Tabs) needs access to your Camera.",
                    "enableMicrophonePermission": true,
                    "microphonePermissionText": "$(Tabs) needs access to your Microphone."
                }
            ]
        ]
    }
}
